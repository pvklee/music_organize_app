<h1><%= @album.title %></h1>

<table>
    <tr>
        <th>Year</th>
        <td><%= @album.year%></td>
    </tr>
    <tr>
        <th>Band</th>
        <td><%= @album.band.name%></td>
    </tr>
    <tr>
        <th>Type</th>
        <td><%= @album.album_type%></td>
    </tr>
    <tr>
        <th>Tracks</th>
        <td>
            <% @album.tracks.each do |track|%>
                <%= track.ord %>
                <%= track.title %>
                <a href="<%= track_path(track) %>">View track</a>
                <br>
            <% end %>
        </td>
    </tr>
</table>

<form action="<%= edit_album_path(@album) %>" method="get">
    <input type="submit" value="Edit album!"> 
</form>

<form action="<%= album_path(@album) %>" method="post">
    <%= auth_token %>
    <input name="_method" value="delete" type="hidden">
    <input type="submit" value="Delete album!"> 
</form>

<br>

<form action="<%= new_album_track_path(@album) %>" method="get">
    <input type="submit" value="Add track!"> 
</form>

<br>

<form action="<%= band_path(@album.band) %>" method="get">
    <input type="submit" value="Back to <%= @album.band.name %>!"> 
</form>

<form action="<%= albums_path %>" method="get">
    <input type="submit" value="Back to all albums!"> 
</form>
