<!DOCTYPE html>
<html>
  <head>
    <title>MusicOrganizeApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>

    <div>
      <h1 class="header-title">MUSIC APP!</h1>
    </div>
    <div>
      <a href="<%= bands_path %>">Bands</a>
      <a href="<%= albums_path %>">Albums</a>
      <a href="<%= tracks_path %>">Tracks</a>
      <a href="<%= notes_path %>">Notes</a>  
    </div>
    <div class="login-container">
      <%= render "shared/user_login_info" %>
    </div>
  </div>
  </header>

  <body>
    <%= yield %>
  </body>

</html>
